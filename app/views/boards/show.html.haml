.container
  %h2= @board.titlename
  .board
    - @tasks.each do |task|
      = link_to board_task_path(@board.id, @tasks) do
        %h4= task.title
        %p= task.content
        .board_detail
        = image_tag 'default-avatar.png', class: 'header_avatar'
  = link_to new_board_task_path(@board) do
    .float_btn
      %p + Add new card