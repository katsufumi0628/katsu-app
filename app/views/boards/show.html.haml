.container
  .board
    %h2.board_title= @board.titlename
    %board_content= @board.content
    .board_detail
      = image_tag 'default-avatar.png', class: 'header_avatar'
      %div
        - if @board.user.present?
          %p= @board.user.display_name
    - if user_signed_in? && current_user.boards.exists?(id: @board.id)
      .board_detail_actions
        .dropdown
          = image_tag 'actions.svg', class: 'dropbtn'
          .dropdown-content.mini
            = link_to '編集する', edit_board_path(@board)
            = link_to '削除する', board_path(@board), data: { method: 'delete',  confirm: '本当に削除してもよろしいですか？' }
  .board
    - @tasks.each do |task|
      = link_to board_task_path(@board.id, @tasks) do
        .board_task 
          %div
            %h4= task.title
            %p= task.content
          %p

  = link_to new_board_task_path(@board) do
    .float_btn
      %p + Add new card