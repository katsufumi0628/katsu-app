.board
  - @tasks.each do |task|
    = link_to board_task_path(@board.id, @tasks) do
      - if task.eyecatch.attached?
        .board_image
        = image_tag task.eyecatch
      .article_detail_actions
        .dropdown
          = image_tag 'actions.svg', class: 'dropbtn'
          .dropdown-content.mini
            = link_to '編集する', edit_task_path(@board)
            = link_to '削除する', board_path(@board), data: { method: 'delete', confirm: '本当に削除してもよろしいですか？' }
      .board_task 
        %div
          %h4= task.title
          %p= task.content
          %p

